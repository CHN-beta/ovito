{
    "build_type": {
        "default": "debug",
        "description": "The CMake build type to use",
        "choices": {
            "debug": {
                "short": "Debug",
                "long": "Emit debug information without performing optimizations",
                "buildType": "Debug"
            },
            "release": {
                "short": "Release",
                "long": "Enable optimizations, omit debug info",
                "buildType": "Release"
            }
        }
