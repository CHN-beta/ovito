            "web": {
                "short": "Web",
                "long": "Builds the browser version of OVITO",
                "settings": {
                    "OVITO_BUILD_WEBGUI" : "ON",
                    "OVITO_BUILD_GUI" : "OFF",
                    "OVITO_BUILD_PLUGIN_NETCDFPLUGIN" : "OFF",
